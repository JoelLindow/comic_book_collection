<h3 class="page_header"> An adventure from the <%= @book.title %> collection</h3>
<div class="page_link_banner">
  <span class="page_link"><%= link_to "Edit Book Information", edit_book_path(@book)%></span>
  <span class="page_link"><%= link_to "Back to All Books", books_path %><br></span>
</div>


<div class="row">
  <div class="col s4 push-s8"><span class="flow-text">
    <%= image_tag @book.img_url, class: 'show_book_cover_image' %><br>
  </span></div>
  <div class="col s8 pull-s4"><span class="flow-text">
  <h3 class="show_title"><%= @book.title %></h3>
  <strong>Series:</strong> <%= @book.series.name %><br>
  <strong>Issue Number:</strong> <%= @book.issue_number %><br>
  <strong>Brand:</strong> <%= @book.brand.name %><br>
  <strong>Description: </strong><small> <%= @book.description %><br> </small>
  </span></div>

</div>
